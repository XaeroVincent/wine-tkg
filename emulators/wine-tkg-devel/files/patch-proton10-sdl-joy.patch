+            memcpy( redir->Buffer, syswow64dirW, sizeof(syswow64dirW) );
+            memcpy( redir->Buffer + ARRAY_SIZE(syswow64dirW), name, len * sizeof(WCHAR) );
+            redir->Buffer[redir->Length / sizeof(WCHAR)] = 0;
+            attr->RootDirectory = 0;
+            attr->ObjectName = redir;
