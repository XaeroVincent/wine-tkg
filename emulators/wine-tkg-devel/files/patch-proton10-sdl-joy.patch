+ *
+ * Checks if the specified file system is in the cache.
+ */
+static struct fs_cache *look_up_fs_cache( dev_t dev )
+{
+    int i;
+    for (i = 0; i < ARRAY_SIZE( fs_cache ); i++)
+        if (fs_cache[i].dev == dev)
+            return fs_cache+i;
