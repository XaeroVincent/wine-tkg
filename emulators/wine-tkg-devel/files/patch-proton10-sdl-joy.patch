+            status = fill_file_info( &st, attributes, info, FileBasicInformation );
+    }
+    else WARN( "%s not found (%x)\n", debugstr_us(attr->ObjectName), status );
+    free( unix_name );
+    free( nt_name.Buffer );
+    return status;
+}
